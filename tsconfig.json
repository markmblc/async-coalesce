{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "skipLibCheck": true,
        "lib": ["es6"],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "outDir": "./dist",
    },
    "files": ["./index.ts"],
    "exclude": ["dist", "node_modules"]
}